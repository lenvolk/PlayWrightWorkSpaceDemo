# Environment variables for Azure Playwright Workspaces
# Copy this file to .env and update with your actual values

# Azure Playwright Workspaces service URL
# Get this from Azure Portal > Your Playwright Workspace > Get Started > Add region endpoint
PLAYWRIGHT_SERVICE_URL=https://eastus.api.playwright.microsoft.com/accounts/{your-workspace-id}/

# Azure MCP Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_LOAD_TEST_RESOURCE=your-load-test-resource

# API base URL for testing
API_BASE_URL=http://localhost:5000

# MCP Server Configuration
MCP_AZURE_PORT=3001
MCP_PLAYWRIGHT_PORT=3002
MCP_OUTPUT_DIR=./mcp/output

# Test configuration
CI=false
HEADLESS=true
