{
  "mcpServers": {
    "azure-mcp": {
      "command": "npx",
      "args": [
        "@azure/mcp-server@latest"
      ],
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}",
        "AZURE_RESOURCE_GROUP": "${AZURE_RESOURCE_GROUP}"
      }
    },
    "playwright-mcp": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--headless",
        "--save-trace",
        "--save-session",
        "--output-dir", "./mcp/output"
      ]
    }
  },
  "version": "1.0"
}
