{
  "info": {
    "name": "Sample API Collection",
    "description": "Demo Postman collection for testing conversion to Locust/Playwright",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Hello Request",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/hello",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["hello"]
        }
      },
      "response": []
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users"]
        }
      },
      "response": []
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users"]
        }
      },
      "response": []
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["users", "1"]
        }
      },
      "response": []
    }
  ]
}
